<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ntecmobileapp.com.at.ntecmobileapp.accommodation.AucklandCampus">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="AUCKLAND CAMPUS"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:fontFamily="serif"
          />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"

            android:layout_gravity="center_horizontal"
            android:src="@drawable/auckland"
            android:adjustViewBounds="true"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Campus Location"
            android:id="@+id/camplocBtn"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:textSize="18dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Facilities"
            android:id="@+id/facilBtn"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:textSize="18dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Tips and Advice"
            android:id="@+id/tipsadvBtn"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:textSize="18dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Contact and email"
            android:id="@+id/contemailBtn"

            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:textSize="18dp"/>


    </LinearLayout>

</RelativeLayout>
