<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ntecmobileapp.com.at.ntecmobileapp.CVWriterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Do you want to use our CV writer tool?"
        android:id="@+id/textView16"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@drawable/custom1"
        android:textColor="#ffffff"
        android:id="@+id/buttonYes"
        android:textSize="20dp"
        android:text="Yes, sure"
        android:layout_below="@+id/scrollView3"
        android:layout_toEndOf="@+id/scrollView3" />

    <Button
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@drawable/custom1"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:text="No, next time"
        android:id="@+id/button6"
        android:layout_below="@+id/scrollView3"
        android:layout_toEndOf="@+id/buttonYes" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3"
        android:layout_below="@+id/textView16">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView27"
        android:layout_below="@+id/buttonYes"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="or simply visit"
        android:id="@+id/textView28"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textView27"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="http://jobtools.ntec.ac.nz/"
        android:id="@+id/textView29"
        android:textSize="16dp"
        android:layout_below="@+id/textView28"
        android:layout_centerHorizontal="true"
        android:textIsSelectable="true"
        android:autoLink="web"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView5"
        android:layout_below="@+id/textView29"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/cvtips"
            android:id="@+id/textView30" />
    </ScrollView>


</RelativeLayout>
