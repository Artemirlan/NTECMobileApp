<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ntecmobileapp.com.at.ntecmobileapp.accommodation.AucklandFacilitiesActivity"

   >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/azure"

        android:padding="40dp"
        android:columnCount="2"
        android:rowCount="3">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:id="@+id/imageATM"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/atmmach"
            android:background="@null"/>

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:padding="15dp"
            android:id="@+id/imageHotel"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/hotel"
            android:background="@null"/>

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:id="@+id/imageHospit"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/hospit"
            android:background="@null"/>

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:id="@+id/imageNature"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/restau"
            android:background="@null"/>

    </GridLayout>
</RelativeLayout>
